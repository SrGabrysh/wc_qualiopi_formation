<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd"
    bootstrap="tests/Bootstrap/bootstrap.php"
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    cacheResult="false"
    executionOrder="random"
    failOnRisky="true"
    failOnWarning="true"
    beStrictAboutTestsThatDoNotTestAnything="true"
    beStrictAboutOutputDuringTests="true"
    beStrictAboutTodoAnnotatedTests="true"
    verbose="true"
>
    <!-- Configuration des tests de sécurité -->
    <testsuites>
        <testsuite name="Security Tests">
            <directory>tests/Unit/Security</directory>
            <directory>tests/Integration/Security</directory>
        </testsuite>
        
        <testsuite name="Sensitive Modules Tests">
            <directory>tests/Unit/Data/Progress</directory>
            <directory>tests/Unit/Cart</directory>
            <directory>tests/Unit/Form/Tracking</directory>
        </testsuite>
        
        <testsuite name="REST API Security Tests">
            <directory>tests/Integration/REST</directory>
        </testsuite>
        
        <testsuite name="SQL Injection Tests">
            <directory>tests/Unit/SQL</directory>
        </testsuite>
        
        <testsuite name="Sanitization Tests">
            <directory>tests/Unit/Sanitization</directory>
        </testsuite>
    </testsuites>

    <!-- Filtres pour exclure les fichiers non testables -->
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <directory>src/Admin</directory>
                <directory>src/Checkout</directory>
                <directory>src/Compliance</directory>
                <file>src/Core/Plugin.php</file>
                <file>src/Core/Activator.php</file>
                <file>src/Core/Deactivator.php</file>
            </exclude>
        </whitelist>
    </filter>

    <!-- Configuration des logs -->
    <logging>
        <log type="coverage-html" target="tests/reports/coverage"/>
        <log type="coverage-clover" target="tests/reports/coverage.xml"/>
        <log type="junit" target="tests/reports/junit.xml"/>
        <log type="testdox-html" target="tests/reports/testdox.html"/>
        <log type="testdox-text" target="tests/reports/testdox.txt"/>
    </logging>

    <!-- Variables d'environnement pour les tests -->
    <php>
        <env name="WP_TESTS_DOMAIN" value="localhost"/>
        <env name="WP_TESTS_EMAIL" value="admin@example.org"/>
        <env name="WP_TESTS_TITLE" value="Test Blog"/>
        <env name="WP_PHP_BINARY" value="php"/>
        <env name="WP_TESTS_FORCE_KNOWN_BUGS" value="true"/>
        <env name="WP_TESTS_DIR" value="/tmp/wordpress-tests-lib"/>
        <env name="WP_CORE_DIR" value="/tmp/wordpress/"/>
        
        <!-- Configuration de sécurité pour les tests -->
        <env name="WCQF_SECURITY_TEST_MODE" value="true"/>
        <env name="WCQF_DISABLE_CACHE" value="true"/>
        <env name="WCQF_MOCK_EXTERNAL_APIS" value="true"/>
    </php>

    <!-- Configuration des mocks et stubs -->
    <extensions>
        <extension class="WcQualiopiFormation\Tests\Extensions\SecurityTestExtension"/>
    </extensions>
</phpunit>
