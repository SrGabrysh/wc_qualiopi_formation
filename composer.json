{
  "name": "tb-web/wc-qualiopi-formation",
  "description": "Plugin WordPress unifié pour tunnel formation Qualiopi avec suivi end-to-end et pré-remplissage checkout",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "woocommerce",
    "qualiopi",
    "formation",
    "gravity-forms",
    "checkout",
    "autofill"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "TB-Web",
      "email": "contact@tb-web.fr",
      "homepage": "https://tb-web.fr"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "*",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "WcQualiopiFormation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WcQualiopiFormation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest",
    "test:unit": "pest --testsuite='Unit Tests'",
    "test:integration": "pest --configuration=phpunit-integration.xml",
    "test:all": "composer test:unit && composer test:integration",
    "test:coverage": "pest --coverage",
    "test:coverage:integration": "pest --configuration=phpunit-integration.xml --coverage",
    "test:watch": "pest --watch",
    "phpcs": "phpcs --standard=WordPress src/",
    "phpcbf": "phpcbf --standard=WordPress src/"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
